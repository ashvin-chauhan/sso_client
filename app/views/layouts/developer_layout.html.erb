<!DOCTYPE html>
<html>
<head>
  <title>Jekyll Integration app</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <% if Rails.env.production? %>
    <base href="/ror/sso_client/" />
  <% else %>
    <base href="/" />
  <% end %>
  <%= yield :cdn_code %>
  <%= javascript_include_tag '//cdn.auth0.com/js/lock/10.0.0/lock.min.js' %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= stylesheet_link_tag    'developer_layout', media: 'all'%>
  <%= javascript_include_tag 'developer_layout' %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tags %>
</head>
<body class="white-bg">
  <div id="hand-over"></div>
  <%= render  'layouts/header' %>
  <div class="page-wapper give-height o-wrapper no-paading-top" id="o-wrapper">
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
    <%= yield %>
  </div>
  <%= render 'layouts/footer' %>
  <!-- Modal -->
  <div id="video_modal" class="modal fade" role="dialog">
    <div class="modal-dialog model-lg">
      <div class="modal-content">
        <div class="modal-body">
          <iframe allowfullscreen="" width="100%" height="400" frameborder="0"></iframe>
        </div>
      </div>
    </div>
  </div>
  <!-- End modal -->
  <%= render 'layouts/sidebar' %>
  <div id="c-mask" class="c-mask"></div>
</body>
</html>
