<header>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-2 col-md-2">
        <div class="hamburger">
          <a href="javascript:;" id="c-button--push-left"><img src="assets/hamburger.svg" width="32" height="32"></a>
        </div>
        <div class="logo-holder">
          <!-- <a href="javascript:;"><img src="assets/logo.png" width="166" height="40"></a> -->
          <%= link_to "#{is_logged_in? ? get_user_target_url_with_relative_url : 'javascript:;'}" do %>
            <img src="assets/logo.png" width="166" height="40">
          <% end %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="search-holder">
        <%= form_tag autocomplete_sidebar_links_users_path, method: :get do %>
          <%= text_field_tag "term", nil, id: "available-link-search-txt", autofocus: true %>
          <div class="results" id="available-link-search-results"></div>
          <button type="submit">search</button>
        <% end %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="others-holders">
          <div class="language-holder">
            <select id="select-language">
              <option>EN</option>
              <option>BN</option>
              <option>CN</option>
            </select>
          </div>
          <% if is_logged_in? %>
          <div class="after-login-holder">
            <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
              <div class="pp"><img src="assets/pic.png" width="32" height="32"></div>
              <div class="pro-info"><%= current_user[:full_name] %><br><span><%= current_user[:role] %></span></div>
            </a>
            <div class="dropdown-menu" role="menu">
              <div class="content">
                <ul>
                  <li><h2>My Profile </h2><span><%= current_user[:email] %></span><a href="javascript:;" class="my-setting"></a></li>
                  <li><%= link_to "Logout", auth_logout_path %></li>
                </ul>
              </div>
            </div>
          </div>
          <% end %>
          <div class="contact-holder">
            <a href="mailto:idg@riversand.com">Feedback</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  new jekyllApp.Links;
</script>