<div class="search-breadcrump">
	<div class="container ">
        <div class="row justify-content-md-end">
        	<div class="col-xs-12 col-sm-12 col-md-12 make-small">
            	<div class="row make-same">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                    <h2>Search</h2>
                    <%= link_to   "Back To Home",get_user_target_url_with_relative_url %>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div class="search-field"><input name="" type="text" placeholder="Create App Design"><button type="submit"><img src="/assets/search-icon.jpg"></button></div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
	<div class="container">
	    <div class="row justify-content-md-end">
	        <div class="col-xs-12 col-sm-12 col-md-12 make-small">
				<%= form_tag autocomplete_sidebar_links_users_path, method: :post , remote: true, id: 'search' do %>
	        	
		            <div class="left-search">
		                <div class="refine-search">Refine Search</div>
		                <div class="loop-search">
		                	<h2>Documentation</h2>
		                	<% @documentation.each do |doc| %>
		                		<%= check_box_tag 'documentation[]',doc , false, class: 'test'  %>
		                        <%= doc %><br>
		                	<% end %>
		                </div>
		                
		                <div class="loop-search">
		                	<h2>Versions</h2>
		                	<% @versions.each do |version| %>
		                		<%= check_box_tag 'version[]',version , false, class: 'test'  %>
		                		<%= version %><br>
			                <% end %>
		                </div>
		                
		                <div class="loop-search">
		                	<h2>Topics</h2>
		                	<% @topics.each do |topic| %>
			                	<%= check_box_tag 'topic[]',topic , false, class: 'test'  %>
			                	<%= topic %><br>
			                <% end %>
		                </div>
		                <div>
		                	<%= hidden_field_tag 'term',params[:term] %>
		                </div>
		            </div>
				<% end %>
	            <div class="right-side">
	                <div class="full-box">
	                	<%= render partial: "entries",:locals => {:filter_links =>  @filter_links } %>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>
<script type="text/javascript">
	$('.test').click(function(){
		$('#search').submit();
	})
</script>